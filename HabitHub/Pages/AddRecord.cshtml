@page
@model HabitHub.Pages.AddRecordModel
@{

}

<h2>Add new record</h2>
<hr />
<div class="row">
	<div class="col-md-4">
		<form method="post">
			<div class="form-group">
				<label asp-for="HabitRecord.Amount" class="control-label"></label>
				<input type="number" asp-for="HabitRecord.Amount" class="form-control" />
				<span asp-validation-for="HabitRecord.Amount" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="HabitRecord.Unit" class="control-label"></label>
				<input type="text" asp-for="HabitRecord.Unit" class="form-control" />
				<span asp-validation-for="HabitRecord.Unit" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="HabitRecord.Date" class="control-label"></label>
				<input type="date" asp-for="HabitRecord.Date" class="form-control" />
				<span asp-validation-for="HabitRecord.Date" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Add" class="btn btn-success" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-page="Index">Back</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}